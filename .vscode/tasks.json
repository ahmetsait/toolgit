{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "mypy",
			"type": "process",
			"command": "mypy",
			"args": [
				"--strict",
				"${file}",
			],
			"problemMatcher": "$gcc",
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"presentation": {
				"reveal": "never",
				"revealProblems": "onProblem",
				"clear": true,
			},
		},
	],
}
